<!-- =============================================== -->
<%- include('header') %>
    <%- include('aside') %>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <h1>
                    <i class="fa fa-th"></i> Thêm mới sản phẩm
                </h1>

            </section>

            <!-- Main content -->
            <section class="content">

                <!-- Default box -->
                <div style="padding: 20px;" class="box">
                    <div class="row">
                        <div class="col-md-5">
                            <form action="box-body" method="POST" enctype="multipart/form-data">
                                <div class="form-group">
                                    <label for="">Tên sản phẩm</label>
                                    <input type="text" class="form-control" name="name" id="" placeholder="Input field">
                                </div>
                                <div class="form-group">
                                    <label for="">Mô tả sản phẩm</label>
                                    <textarea name="content" class="form-control noi-dung" rows="10" required="required"
                                        id=""></textarea>
                                </div>
                            </form>
                        </div>
                        <div class="col-md-5">

                            <form action="" method="POST" enctype="multipart/form-data">

                                <div class="box-body">


                                    <div class="form-group">
                                        <label for="">Giá sản phẩm</label>
                                        <input type="text" class="form-control" name="price" id=""
                                            placeholder="Input field">
                                    </div>
                                    <div class="form-group">
                                        <label for="">Giá khuyến mãi</label>
                                        <input type="text" class="form-control" name="sale_price" id=""
                                            placeholder="Input field">
                                    </div>
                                    <div class="form-group">
                                        <label for="">Danh mục</label>

                                        <select name="category_id" class="form-control">
                                            <option value="">Chọn danh mục</option>
                                            <% items.map((item)=> { %>
                                                <option value="<%= item.id %>">
                                                    <%= item.name%>
                                                </option>

                                                <% }) %>
                                        </select>

                                    </div>


                                    <div class="form-group">
                                        <label for="">Trạng thái danh mục</label>

                                        <div class="radio">
                                            <label>
                                                <input type="radio" name="status" id="input" value="1"
                                                    checked="checked">
                                                Hiển thị
                                            </label>
                                        </div>

                                        <div class="radio">
                                            <label>
                                                <input type="radio" name="status" id="input" value="0"
                                                    checked="checked">
                                                Tạm ẩn
                                            </label>
                                        </div>

                                    </div>
                                    <div class="form-group">
                                        <label for="">Hình ảnh</label>
                                        <input type="file" class="form-control" onchange="showImg(this)" name="image"
                                            id="">
                                    </div>
                                </div>


                                <div class="box-footer">
                                    <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i>
                                        Lưu</button>

                                    <a type="submit" href="/danh-muc" class="btn btn-default pull-right"><i
                                            class="fa fa-arrow-left"></i> Quay lại</a>
                                </div>

                            </form>

                        </div>

                        <div class="col-md-2">
                            <a href="#" class="thumbnail">
                                <img id="load-img" src="" alt="">
                            </a>

                        </div>
                    </div>


                </div>
                <!-- /.box -->

            </section>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->

        <%- include('footer') %>

            <script>
                function showImg(input) {
                    if (input.files && input.files[0]) {
                        var reader = new FileReader();

                        reader.onload = function (e) {
                            $('#load-img').attr('src', e.target.result).width(150).height(200);
                        };

                        reader.readAsDataURL(input.files[0]);
                    }
                }
            </script>